<div class="bg-dark">
  <div id="hero-carousel" class="carousel slide">
    <div class="carousel-indicators">
      <% heroVideos.forEach((video, index) => { %>
      <button
        type="button"
        data-bs-target="#hero-carousel"
        data-bs-slide-to="<%= index %>"
        aria-label="<%= video.name %>"
        class="<%= index === 0 ? 'active' : '' %>"
        aria-current="<%= index === 0 ? 'true' : '' %>"
      ></button>
      <% }) %>
    </div>

    <div class="carousel-inner">
      <% heroVideos.forEach((video, index) => { %>
      <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
        <img
          src="<%= video.thumbnail?.url?.split('?')?.[0] %>"
          class="d-block w-100"
          alt="<%= video.name %>"
        />
        <div class="image-background"></div>
        <div class="image-overlay"></div>
        <div class="image-content">
          <h5 class="text-white mb-4"><%= video.name?.split('_')?.[0] %></h5>
          <a class="btn btn-dark" href="/category/recommended/<%= video.id %>" role="button">
            <span>Watch Now</span>
            <i class="bi bi-play-btn-fill"></i>
          </a>
        </div>
      </div>
      <% }) %>
    </div>

    <button
      class="carousel-control-prev"
      type="button"
      data-bs-target="#hero-carousel"
      data-bs-slide="prev"
    >
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>

    <button
      class="carousel-control-next"
      type="button"
      data-bs-target="#hero-carousel"
      data-bs-slide="next"
    >
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
</div>

<style>
  #hero-carousel {
    max-width: 1000px;
    max-height: 520px;
    margin: auto;
    overflow: hidden;
  }

  #hero-carousel .carousel-item img {
    max-height: 520px;
    object-fit: cover;
  }

  #hero-carousel .image-background {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background: linear-gradient(
      90deg,
      #212529 0%,
      transparent 20%,
      transparent 80%,
      #212529 100%,
      transparent
    );
  }

  #hero-carousel .image-overlay {
    position: absolute;
    width: 100%;
    height: 300px;
    bottom: 0;
    left: 0;
    background-image: url(/images/gradient-overlay-plus.png);
    background-repeat: repeat-x;
  }

  #hero-carousel .image-content {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: 5% 8%;
    align-items: flex-start;
  }

  #hero-carousel .carousel-control-next,
  #hero-carousel .carousel-control-prev {
    width: 7%;
  }
</style>
